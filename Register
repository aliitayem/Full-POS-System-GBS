import tkinter as tk

python
def update_label(digit):
    current_text = label.cget("text")
    
    # Remove the initial zeros, except for the special cases of '0' and '00'
    if current_text != '0' and current_text != '00':
        current_text = current_text.lstrip("0")
    
    # Split the current text into integer and decimal parts
    integer_part, decimal_part = current_text.split(".")
    
    # Handle the special case of '00'
    if digit == '00':
        integer_part += digit
    else:
        # Add the clicked digit to the appropriate part (integer or decimal)
        if decimal_part == '':
            integer_part += str(digit)
        else:
            decimal_part += str(digit)
    
    # Limit the decimal part to two digits
    decimal_part = decimal_part[:2]
    
    # Combine the integer and decimal parts with the decimal point
    if decimal_part != '':
        current_text = integer_part + "." + decimal_part
    else:
        current_text = integer_part
    
    # Update the label text
    label.config(text=current_text)


root = tk.Tk()

# Create a frame for the register buttons
register_frame = tk.Frame(root, padx=10, pady=10)
register_frame.pack()

# Create a label to display the entered amount
label = tk.Label(root, text="0.00")
label.pack()

# Create button0 for digit 0
button0 = tk.Button(register_frame, text="0", width=10, command=lambda: update_label('0'))
button0.grid(row=4, column=0)

# Create button00 for digit 00
button00 = tk.Button(register_frame, text="00", width=10, command=lambda: update_label('00'))
button00.grid(row=4, column=1)

# Create buttons for digits 1 through 9
button1 = tk.Button(register_frame, text="1", width=10, command=lambda: update_label('1'))
button1.grid(row=3, column=0)

button2 = tk.Button(register_frame, text="2", width=10, command=lambda: update_label('2'))
button2.grid(row=3, column=1)

button3 = tk.Button(register_frame, text="3", width=10, command=lambda: update_label('3'))
button3.grid(row=3, column=2)

button4 = tk.Button(register_frame, text="4", width=10, command=lambda: update_label('4'))
button4.grid(row=3, column=3)

button5 = tk.Button(register_frame, text="5", width=10, command=lambda: update_label('5'))
button5.grid(row=3, column=4)

button6 = tk.Button(register_frame, text="6", width=10, command=lambda: update_label('6'))
button6.grid(row=2, column=0)

button7 = tk.Button(register_frame, text="7", width=10, command=lambda: update_label('7'))
button7.grid(row=2, column=1)

button8 = tk.Button(register_frame, text="8", width=10, command=lambda: update_label('8'))
button8.grid(row=2, column=2)

button9 = tk.Button(register_frame, text="9", width=10, command=lambda: update_label('9'))
button9.grid(row=2, column=3)

# Create blank buttons to fill the extra space
button_blank1 = tk.Button(register_frame, text="", width=10, state=tk.DISABLED)
button_blank1.grid(row=2, column=4)

button_blank2 = tk.Button(register_frame, text="", width=10, state=tk.DISABLED)
button_blank2.grid(row=3, column=4)

button_blank3 = tk.Button(register_frame, text="", width=10, state=tk.DISABLED)
button_blank3.grid(row=4, column=2)

button_blank4 = tk.Button(register_frame, text="", width=10, state=tk.DISABLED)
button_blank4.grid(row=4, column=3)

button_blank5 = tk.Button(register_frame, text="", width=10, state=tk.DISABLED)
button_blank5.grid(row=4, column=4)

root.mainloop()